{% if item.hero_background_image is not empty %}
<section class="gc-hero gc-hero-bg" style="background-image: url({{TimberImage(item.hero_background_image).src}});">
{% else %}
<section class="gc-hero gc-hero-bg">
{% endif %}
  <div class="gc-container">
    <div class="gc-row">
      <div class="gc-offset-sm-6 gc-col-sm-6">
        <div class="xs-pt-30 xs-pb-30 xs-pr-30 xs-pl-30">
          <h1 class="title-1 text-white xs-mb-20">{{ item.hero_title }}</h1>
          <p class="text-20 text-white">{{ item.hero_text }}</p>
          <a href="{{ item.hero_button.url }}" class="xs-mt-50 button button-large button-teal text-button text-white">{{ item.hero_button.text }}</a>
        </div>
      </div>
    </div>
  </div>
  <div class="gc-hero-bg-filter"></div>
</section>
