{% extends "layouts/base.twig" %}
{% block content %}
  <section class="ch-hero ch-hero-slim  ch-hero-slim-remove-border">
  <div class="ch-container">
    <div class="ch-row">
      <div class="ch-hero-content">
        {% if options.error_hero_content is not empty %}
        {{ options.error_hero_content }}
        {% endif %}
      </div>
        <div class="ch-hero-image ch-hero-slim-image">
          <img src="{{theme.link}}/library/images/eyes-circles@2x.png" alt="two grahpic eyeballs with circles" style="max-width:450px" />
        </div>
    </div>
  </div>
</section>
<section class="ch-text-info">
  <div class="ch-container">
    <div class="ch-row">
      <div class="ch-text-info-left">
          {% if options.error_main_content is not empty %}
          {{ options.error_main_content }}
          {% endif %}
      </div>
      <div class="ch-text-info-right">
          {% if options.error_sidebar_content is not empty %}
          {{ options.error_sidebar_content }}
          {% endif %}
      </div>
    </div>
  </div>
</section>
<section class="ch-logo-cta ch-logo-cta-blue">
  <div class="ch-container">
    <div class="ch-row">
      <div class="ch-logo-cta-left">
          {% if options.call_out_content is not empty %}
          {{ options.call_out_content }}
          {% endif %}
      </div>
      <div class="ch-logo-cta-right">
        <div class="ch-logo-cta-buttons">
            {% if options.pricing_button %}
            <a href="{{options.pricing_button.url}}" {{options.pricing_button.target}} class="ch-button ch-button-white ch-button-white-medium">{{options.pricing_button.text}}</a>
            {% endif %}
            {% if options.sales_button %}
            <a href="{{options.sales_button.url}}" {{options.sales_button.target}} class="ch-button ch-button-green ch-button-green-medium">{{options.sales_button.text}}</a>
            {% endif %}
            <p>{{ options.short_description }}</p>
        </div>
      </div>
    </div>
    <div class="ch-logo-cta-logo"><img src="{{theme.link}}/library/images/sench-logo-icon@2x.png" alt="logo for sensu" /></div>
  </div>
</section>
{% endblock %}
