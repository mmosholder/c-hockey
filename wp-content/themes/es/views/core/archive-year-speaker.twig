{% extends "layouts/base.twig" %}
{% block content %}
<section class="ch-hero ch-hero-slim ch-hero-slim-blue ch-hero-slim-remove-border">
  <div class="ch-container">
    <div class="ch-row">
      <div class="ch-hero-content">
          <h1>All {{ archive_year }} Speakers</h1>
          <p>All the speakers for {{ archive_year }}.</p>
      </div>
        <div class="ch-hero-image ch-hero-slim-image">
          <img src="{{theme.link}}/library/images/eye-circle@2x.png" alt="Monitoring with Sensu provides total visibility into your infrastructure" style="max-width:420px" />
        </div>
    </div>
  </div>
</section>
<section class="ch-columns -white-bg">
  <div class="ch-container">
    <div class="ch-row">
      {% for post in posts %}
        <div class="ch-columns-col">
          <img src="{{TimberImage(post.speaker_profile_image)}}" width="140" class="col-icon col-icon-profile" />
          <h3>{{post.title}}</h3>
          <p>{{ post.speaker_desc | excerpt(20)}}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
